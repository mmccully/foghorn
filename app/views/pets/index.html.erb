<h1>Listing pets</h1>

<table>
  <tr>
    <th>Pet name</th>
    <th>Color</th>
    <th>Species</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.pet_name %></td>
    <td><%= pet.color %></td>
    <td><%= pet.species %></td>
    <td><%= pet.kid.first_name %> </td>
    <td><%= link_to 'Show', pet %></td>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

